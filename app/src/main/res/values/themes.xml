<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProjectAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background brand color. -->
        <item name="android:background">@color/background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>

        <!-- Dark text color. -->
        <item name="android:textColorPrimary">@color/text_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/task_primary</item>

        <!-- Taskbar text color. -->
        <item name="android:textColorSecondary">@color/task_secondary</item>

        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="Theme.FinalProjectAndroid" parent="Base.Theme.FinalProjectAndroid" />

    <style name="ToolbarTheme">
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
        <item name="android:background">@color/task_primary</item>
    </style>

    <style name="ToolbarTheme.Title" parent="ToolbarTheme">
        <item name="titleTextColor">@color/secondary</item>
        <item name="android:background">@color/task_primary</item>
    </style>

    <style name="toolBarPopUpTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/task_primary</item>
    </style>

</resources>